<% if flash[:notice] %>
 <div class="flash">
   <%= flash[:notice] %>
 </div>
<% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <th><%= book.title %></th>
       <th><%= book.body %></th>
       <th>
         <%= link_to "Show", book_path(book) %>
       </th>
       <th>
         <%= link_to "Edit", edit_book_path(book) %>
       </th>
       <th>
         <%= link_to "Destroy", book_path(book), method: :delete %>
       </th>
     </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<% if @book.errors.any? %>
　<%= @book.errors.count %> errors have occurred
　<% @book.errors.full_messages.each do |message| %>
　 <%= message %>
　<% end %>
<% end %>

<%= form_with model:@book,local:true do |f| %>
 <div>
     <label>Title</label>
 </div>
      <%= f.text_field :title %>


 <div>
     <label>Body</label>
 </div>
      <%= f.text_area :body %>
      <%= f.submit'Create Book' %>

<% end %>
